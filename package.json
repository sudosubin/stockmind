{
  "name": "stockmind",
  "private": true,
  "type": "module",
  "imports": {
    "#/*": "./src/*"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite --port 3000",
    "fetch:stocks": "bun run scripts/fetch-stocks.ts",
    "prepare": "simple-git-hooks",
    "preview": "vite preview"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "biome lint --write",
      "biome format --write"
    ],
    "package.json": "sort-package-json"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.17.1",
    "@vanilla-extract/vite-plugin": "^5.0.1",
    "@visx/axis": "^3.12.0",
    "@visx/curve": "^3.12.0",
    "@visx/gradient": "^3.12.0",
    "@visx/grid": "^3.12.0",
    "@visx/group": "^3.12.0",
    "@visx/responsive": "^3.12.0",
    "@visx/scale": "^3.12.0",
    "@visx/shape": "^3.12.0",
    "motion": "^12.4.3",
    "preact": "^10.25.4",
    "preact-iso": "^2.9.0",
    "reshaped": "^3.3.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@preact/preset-vite": "^2.10.1",
    "lint-staged": "^15.4.3",
    "simple-git-hooks": "^2.11.1",
    "sort-package-json": "^2.14.0",
    "vite": "^6.1.0"
  }
}
